{% extends 'base.html.twig' %}

{% block title %}Library: {{ library.address }}{% endblock %}

{% block body %}
    <div class="">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Books</th>
                </tr>
            </thead>
            <tbody>
                {% for book in library.books %}
                    <tr>
                        <th scope="row">{{ book.id }}</th>
                        <td>{{ book.title }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
