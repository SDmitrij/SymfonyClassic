{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('booksActions') }}
{% endblock %}

{% block title %}Books listing{% endblock %}

{% block body %}
    <div id="modal-placeholder"></div>
    <h3>Books:</h3>
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Book-title</th>
                <th scope="col">Content</th>
                <th scope="col">Type</th>
                <th scope="col">Author</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for book in pag_books %}
                <tr>
                    <th scope="row">
                        <i class="fas fa-book fa-2x"></i>
                    </th>
                    <td>{{ book.title }}</td>
                    <td>{{ book.content }}</td>
                    <td>{{ book.literaryType}}</td>
                    <td>{{ book.author.name ~' '~ book.author.surname }}</td>
                    <td>
                        <button type="button" class="btn btn-light">
                            <span class="fas fa-trash"></span>
                        </button>
                        <button type="button" class="btn btn-light">
                            <span class="fas fa-marker"></span>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(pag_books) }}
    </div>
{% endblock %}
